<div class="row">
  <div class="large-6 columns">
<%= form_for(@deck) do |f| %>
  <% if @deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% @deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :required => true %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :required => true %>
  </div>
  <div class="field">
    <%= f.label :back_color %>
    <%=  %>
    <%= f.text_field :back_color, :class => 'color', :value => h(@deck.back_color) rescue 'No category found' %>
  </div>
    <div class="field">
    <%= f.label :text_color %>
    <%= f.text_field :text_color, :class => 'color' %>
  </div>
  <div class="field">
    <%= f.label :creator %><br>
    <%= f.text_field :creator %>
  </div>
 
  <div class="control-group">
    <%= f.label :category, class: 'control-label' %>
    <div class="controls">
      <%= f.select(:category, options_for_select([['Math', 'Math'], ['Language', 'Language'], ['Children', 'Children'], ['Misc', 'Misc']], f.object.category), { include_blank: true }) %>
    </div>
 
  <div class="control-group">
    <%= f.label :language, class: 'control-label' %>
    <div class="controls">
    <%= f.select(:language, options_for_select([['English', 'English'], ['Spanish', 'Spanish'], ['German', 'German'], ['French', 'French'], ['Italian', 'Italian']], f.object.language), {include_blank: true})%>
  </div>

  <div class="actions">
    <%= f.submit class: 'button' %>
    </br>
    <%= link_to 'Cancel', decks_path, :class => 'button'  %>
  </div>
<% end %>
  </div>
</div>
