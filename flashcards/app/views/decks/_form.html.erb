<div class="row">
  <div class="large-6 columns">
<%= form_for(@deck) do |f| %>
  <% if @deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h2>

      <ul>
      <% @deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :required => true %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :required => true %>
  </div>
  <div class="field">
    <%= f.label :back_color %>
    <%= f.text_field :back_color, :class => 'color' %>
  </div>
    <div class="field">
    <%= f.label :text_color %>
    <%= f.text_field :text_color, :class => 'color' %>
  </div>
  <div class="field" style="display:none">
    <%= f.label :creator_id %><br>
    <%= f.number_field :creator_id %>
  </div>
  <div class="field">
    <%= f.label :published %><br>
    <%= f.date_select :published, :required => true %>
  </div>
 
   <div class="control-group">
    <%= f.label "Category", class: 'control-label' %>
    <div class="controls">
      <%= f.select(:category, options_for_select([['Math', 'Math'], ['Language', 'Language'], ['Children', 'Children'], ['Misc', 'Misc']]), { include_blank: true }) %>
  </div>
 
  <div class="field" style="display:none">
    <%= f.label :language_id %><br>
    <%= f.number_field :language_id %>
  </div>
  <div class="field">
    <%= f.label :updated %><br>
    <%= f.date_select :updated, :required => true %>
  </div>
  <div class="field" style="display:none">
    <%= f.label :current_contributer_id %><br>
    <%= f.number_field :current_contributer_id %>
  </div>
  <div class="field" style="display:none">
    <%= f.label :downloads %><br>
    <%= f.number_field :downloads %>
  </div>
  <div class="field" style="display:none">
    <%= f.label :views %><br>
    <%= f.number_field :views %>
  </div>
  <div class="field" style="display: none;">
    <%= f.label :flag_id %><br>
    <%= f.number_field :flag_id %>
  </div>
  <div class="actions">
    <%= f.submit class: 'button' %>
    </br>
    <%= link_to 'Cancel', decks_path, :class => 'button'  %>
  </div>
<% end %>
  </div>
</div>
