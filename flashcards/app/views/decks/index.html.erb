<p id="notice"><%= notice %></p>

<h1>Listing Decks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Creator</th>
      <th>Published</th>
      <th>Category</th>
      <th>Language</th>
      <th>Updated</th>
      <th>Current contributer</th>
      <th>Downloads</th>
      <th>Views</th>
      <th>Flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.title %></td>
        <td><%= deck.description %></td>
        <td><%= deck.creator_id %></td>
        <td><%= deck.published %></td>
        <td><%= deck.category_id %></td>
        <td><%= deck.language_id %></td>
        <td><%= deck.updated %></td>
        <td><%= deck.current_contributer_id %></td>
        <td><%= deck.downloads %></td>
        <td><%= deck.views %></td>
        <td><%= deck.flag_id %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

