<style>
  .deck {
    border: 1px solid #000;
    font-align: center;
    width: 250px;
    height: 300px;
  }
</style>
<h1>Listing Decks</h1>
<div class="row">
  <div class="large-10 columns">

    <% @decks.each do |deck| %>
       <h1><%= link_to deck.title, deck_path(deck) %></h1>
       <div class="deck">
         <div class-"cards"></div>
         <div class-"info"></div>
       </div>
    <% end %>
</div>
</div>
<br>

<%= link_to 'New Deck', new_deck_path, :class => 'button' %>
